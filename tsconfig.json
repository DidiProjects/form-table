{
  "include": ["src", "example-app/src/components/EditableCell.tsx", "example-app/src/components/FormTable.tsx", "example-app/src/components/__tests__"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "module": "esnext"
  }
}